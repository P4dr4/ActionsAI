{
  "compilerOptions": {
    "target": "ES6",                           // Specify ECMAScript target version
    "module": "commonjs",                      // Specify module code generation
    "outDir": "./dist",                        // Output directory for compiled JS files
    "rootDir": "./src",                        // Root directory of your TypeScript source files
    "strict": true                             // Enable strict type checking options
  },
  "include": [
    "src/**/*"                                 // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules",                            // Exclude node_modules from compilation
    "**/*.test.ts"                             // Optionally exclude test files
  ]
}
